<section class="ash-container">
  <div class="ash-container__fix">
    <div class="ash-section ash-section--about">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'headline' -%}
            <h2 class="ash-headline">
              {{ block.settings.text | escape }}
            </h2>
        {%- endcase -%}
      {%- endfor -%}

      <p class="ash-description">
        {{ 'sections.about.caption' | t }}
      </p>

      <div class="ah-horizontal-divider">&nbsp;</div>

      <ul class="block-list">
        <li class="block-list__item">
          <p class="ash-description">
            {{ 'sections.about.block_list_1' | t }}
          </p>
        </li>
        <li class="block-list__item">
          <p class="ash-description">
            {{ 'sections.about.block_list_2' | t }}
          </p>
        </li>
      </ul>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.ash-about.name",
  "blocks": [
    {
      "type": "headline",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Hi, we are Handmade Studio",
          "label": "t:sections.ash-about.blocks.headline.settings.text.label"
        }
      ]
    }
  ]
}
{% endschema %}
