{{ 'section-kazaryan.css' | asset_url | stylesheet_tag }}

{%- style -%}
  {{ section.settings.section_headline_font_family | font_face }}
  {{ section.settings.section_text_font_family | font_face }}
{%- endstyle -%}

<div
  class="section-kazaryan"
  style="font-family: '{{ section.settings.section_text_font_family.family }}'; font-weight:{{ section.settings.section_text_font_family.weight }} "
>
  <div class="section-kazaryan__fix">
    <div class="about-container {% if section.settings.castling_segments == false %}about-container--left-spacer{% elsif section.settings.castling_segments == true %}about-container--right-spacer{% endif %}">
      <div class="about-container__img-cell">
        <div class="about-container__img-position">
          {% if section.settings.section_image.src != blank %}
            <img
              src="{{ section.settings.section_image | image_url: width: 306, height: 376 }}"
              alt="{{ section.settings.section_image.alt }}"
              width="306"
              height="376"
              loading="lazy"
            >
          {% elsif section.settings.section_image.src == blank %}
            {{ 'collection-1' | placeholder_svg_tag }}
          {% endif %}
        </div>
      </div>
      <h2
        class="section-headline"
        style="font-family: '{{ section.settings.section_headline_font_family.family }}'"
      >
        {{ section.settings.section_headline }}
      </h2>

      <div class="section-context section-context--caption">
        {{ section.settings.section_caption }}
      </div>

      <i class="horizontal-divider">&nbsp;</i>
      <div class="section-context section-context--two-cols">
        {{ section.settings.section_description }}
      </div>

      <div class="list-persons">
        <div class="list-persons__images">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'link' %}
                <div class="link" {{ block.shopify_attributes }}>
                  {{ block.settings.linktext | link_to: block.settings.linkurl }}
                </div>
              {% when 'custom-text' %}
                <div class="text" {{ block.shopify_attributes }}>{{ block.settings['custom-text-field'] }}</div>
            {% endcase %}
          {% endfor %}

          {%- comment -%}
             {%- for block in section.blocks -%}
              <span class="person-img">{{ block.settings.person_1_name }}</span>
            {%- endfor -%}
          {%- endcomment -%}
        </div>
        <div class="list-persons__full-names">
          <div class="flex-box">
            <span class="person-full-name">Clara Williams</span>
            <span class="person-full-name">Joyce Harper</span>
            <span class="person-full-name">and</span>
            <span class="person-full-name">Tanya Caldwell</span>
          </div>
          <div class="person-positions">
            {{ section.settings.person_positions }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.section_kazaryan.name",
  "tag": "section",
  "settings": [
    {
      "id": "castling_segments",
      "type": "checkbox",
      "label": "t:sections.section_kazaryan.settings.castling_segments.label",
      "info": "t:sections.section_kazaryan.settings.castling_segments.info",
      "default": false
    },
    {
      "id": "section_headline",
      "type": "richtext",
      "label": "t:sections.section_kazaryan.settings.section_headline.label",
      "info": "t:sections.section_kazaryan.settings.section_headline.info",
      "default": "<p>Hi, we are<br>Handmade Studio</p>"
    },
    {
      "id": "section_caption",
      "type": "richtext",
      "label": "t:sections.section_kazaryan.settings.section_caption.label",
      "info": "t:sections.section_kazaryan.settings.section_caption.info",
      "default": "<p>Marketing non-disclosure agreement scrum project alpha lean startup startup business plan user experience angel investor focus research & development value proposition graphical user interface investor.</p>"
    },
    {
      "id": "section_description",
      "type": "richtext",
      "label": "t:sections.section_kazaryan.settings.section_description.label",
      "info": "t:sections.section_kazaryan.settings.section_description.info",
      "default": "<p>Marketing non-disclosure agreement scrum project alpha lean startup startup business plan user experience angel investor focus research & development value proposition graphical user interface investor. Non-disclosure agreement scrum project alpha lean startup startup business plan user experience angel investor focus research & development value proposition graphical user interface investor.</p>"
    },
    {
      "id": "person_positions",
      "type": "text",
      "label": "t:sections.section_kazaryan.settings.person_positions.label",
      "info": "t:sections.section_kazaryan.settings.person_positions.info",
      "default": "The Founders of Handmade Studio"
    },
    {
      "type": "font_picker",
      "id": "section_headline_font_family",
      "label": "t:sections.section_kazaryan.settings.section_headline_font_family.label",
      "info": "t:sections.section_kazaryan.settings.section_headline_font_family.info",
      "default": "playfair_display_n7"
    },
    {
      "type": "font_picker",
      "id": "section_text_font_family",
      "label": "t:sections.section_kazaryan.settings.section_text_font_family.label",
      "info": "t:sections.section_kazaryan.settings.section_text_font_family.info",
      "default": "poppins_n4"
    },
    {
      "type": "image_picker",
      "id": "section_image",
      "label": "t:sections.section_kazaryan.settings.section_image.label",
      "info": "t:sections.section_kazaryan.settings.section_image.info"
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Link",
      "settings": [
        {
          "id": "linkurl",
          "type": "url",
          "label": "URL link"
        },
        {
          "id": "linktext",
          "type": "text",
          "label": "Link text"
        }
      ]
    },
    {
      "type": "custom-text",
      "name": "Custom Text",
      "settings": [
        {
          "id": "custom-text-field",
          "type": "textarea",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}
